@model IEnumerable<CRUDDemo.Models.EmployeeInfo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>


@*For Display Employee Info*@
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Compañia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var emp in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => emp.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.Compañia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.Departamento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@emp.ID">Editar</a>
                
                <a asp-action="Delete" asp-route-id="@emp.ID">Eliminar</a>
            </td>
        </tr>
        }
    </tbody>
</table>